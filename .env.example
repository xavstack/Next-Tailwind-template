# =============================================================================
# Next.js Tailwind Template - Environment Variables Example
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
# Options: development | production | test

# Application URL (used for absolute URLs, SEO, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# API & BACKEND INTEGRATION
# =============================================================================

# Internal API Base URL (if using custom API routes)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Java/Spring Boot Backend Integration
# Uncomment and configure if integrating with Java backend
# JAVA_BACKEND_URL=http://localhost:8080
# JAVA_API_BASE_PATH=/api/v1
# JAVA_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# External API Keys
# API_KEY_SERVICE_NAME=your_api_key_here
# EXTERNAL_API_URL=https://api.external-service.com

# =============================================================================
# DATABASE (if using)
# =============================================================================

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/database_name

# =============================================================================
# AUTHENTICATION (if using)
# =============================================================================

# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# Auth0
# AUTH0_SECRET=your-auth0-secret
# AUTH0_BASE_URL=http://localhost:3000
# AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Service (Resend, SendGrid, etc.)
# EMAIL_FROM=noreply@yourdomain.com
# RESEND_API_KEY=your-resend-api-key
# SENDGRID_API_KEY=your-sendgrid-api-key

# Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Error Monitoring
# SENTRY_DSN=https://your-sentry-dsn
# NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Modes
# DEBUG=true
# VERBOSE_LOGGING=true

# Performance Monitoring
# NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Vercel
# VERCEL_URL=auto-generated-by-vercel
# VERCEL_ENVIRONMENT=development

# Railway
# RAILWAY_ENVIRONMENT=development

# Custom Deployment
# PORT=3000
# HOST=0.0.0.0

# =============================================================================
# SECURITY
# =============================================================================

# CORS Settings (for custom API routes)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
# NEXT_PUBLIC_FEATURE_ANALYTICS=true
# NEXT_PUBLIC_FEATURE_CHAT=false
# NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
