# Next.js App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
ALLOWED_IMG_HOSTS=images.unsplash.com,res.cloudinary.com,avatars.githubusercontent.com
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Contact Form
CONTACT_EMAIL=contact@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional Features (set to 'true' to enable)
ENABLE_CAPTCHA=false
ENABLE_E2E=false
ENABLE_MDX=false
ENABLE_STORYBOOK=false
ENABLE_TURBOPACK=false
ENABLE_JAVA_BACKEND=false
ENABLE_AUTH=false
ENABLE_MONITORING=false
ENABLE_I18N=false
ENABLE_PWA=false
ENABLE_DOCKER=false
USE_CURSOR=true

# Production Only
# CAPTCHA_SITE_KEY=your-captcha-site-key
# CAPTCHA_SECRET_KEY=your-captcha-secret-key
# SENTRY_DSN=https://your-sentry-dsn
# DATABASE_URL=your-database-url
