# Next.js Template Environment Variables
# Copy this file to .env.local and fill in your values

# ==================================
# NEXT.JS ENVIRONMENT
# ==================================
# Set to 'production' in production environments
NODE_ENV=development

# ==================================
# API CONFIGURATION
# ==================================
# Base URL for API endpoints (useful for development vs production)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ==================================
# EXTERNAL SERVICES (Optional)
# ==================================
# Email service (for contact form functionality)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password

# Database connection (if needed)
# DATABASE_URL=your-database-connection-string

# ==================================
# ANALYTICS & MONITORING (Optional)
# ==================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID

# Vercel Analytics
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# ==================================
# AUTHENTICATION (Optional)
# ==================================
# NextAuth.js secret (generate with: openssl rand -base64 32)
# NEXTAUTH_SECRET=your-secret-key
# NEXTAUTH_URL=http://localhost:3000

# ==================================
# THIRD-PARTY APIS (Optional)
# ==================================
# Add your API keys here as needed
# OPENAI_API_KEY=your-openai-key
# STRIPE_SECRET_KEY=your-stripe-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
